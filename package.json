{
  "name": "es-writer-extension",
  "displayName": "Es writer extension",
  "version": "0.0.1",
  "description": "Automatic ES(entry sheet) generation tool",
  "author": "Teamsasa",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "check" : "biome check --write ./src"
  },
  "dependencies": {
    "@clerk/chrome-extension": "^2.2.13",
    "plasmo": "0.90.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.4.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "postcss": "8.4.33",
    "typescript": "5.3.3"
  },
  "manifest": {
    "key": "$CRX_PUBLIC_KEY",
    "permissions": [
      "cookies",
      "storage"
    ],
    "host_permissions": [
      "http://localhost/*",
      "$CLERK_FRONTEND_API/*"
    ]
  }
}
